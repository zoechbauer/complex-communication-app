<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">
  <% errors.forEach(errMsg => { %>
  <div class="text-center alert alert-danger"><%= errMsg %></div>
  <% }) %> <% success.forEach(errMsg => { %>
  <div class="text-center alert alert-success"><%= errMsg %></div>
  <% }) %>

  <form action="/post/<%= post._id %>/edit" method="POST">
    <div class="form-group">
      <label for="post-title" class="text-muted mb-1"
        ><small>Title</small></label
      >
      <input
        required
        name="title"
        id="post-title"
        value="<%= post.title %>"
        class="form-control form-control-lg form-control-title"
        type="text"
        placeholder=""
        autocomplete="off"
      />
    </div>

    <div class="form-group">
      <label for="post-body" class="text-muted mb-1"
        ><small>Body Content</small></label
      >
      <textarea
        required
        name="body"
        id="post-body"
        class="body-content tall-textarea form-control"
        type="text"
      >
<%= post.body %></textarea
      >
    </div>

    <button class="btn btn-primary">Save Updates</button>
  </form>
</div>

<%- include('includes/footer') %>
